<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_grey">


    <RelativeLayout
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_straight">

        <ImageButton
            android:id="@+id/bt_add_plan_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/icon_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="添加计划"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_copy_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_bar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/et_copy_board"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:layout_toStartOf="@+id/bt_add_plan_submit"
            android:background="@drawable/bg_rl_view_select"
            android:hint="输入复制的内容"
            android:paddingHorizontal="5dp"
            android:lines="1"
            android:textAlignment="center" />


        <android.widget.Button
            android:id="@+id/bt_add_plan_submit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/bg_button"
            android:text="添加该计划"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_copy_board"
        android:layout_margin="10dp"
        android:background="@drawable/bg_dialog_radius_white">

        <ListView
            android:id="@+id/lv_add_plan_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_add_plan_list" />

    </RelativeLayout>


</RelativeLayout>