<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_load_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_straight"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/bt_load_schedule_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_web_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/bt_load_schedule_refresh"
            android:layout_toEndOf="@+id/bt_load_schedule_back"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text=""
            android:lines="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/bt_load_schedule_refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/icon_refresh" />

    </RelativeLayout>

    <WebView
        android:id="@+id/classWeb"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/v_bottom_bg"
        app:layout_constraintTop_toBottomOf="@id/rl_bar" />

    <View
        android:id="@+id/v_bottom_bg"
        android:layout_width="0dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="导入课程表"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/tv_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/v_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/v_bottom_bg"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@id/tv_subtitle"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="请先在浏览器登录教务系统，定位到个人课程表页面后，点击导入"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@id/tv_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_widgets_button_small"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="一键导入"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/v_bottom_bg"
        app:layout_constraintEnd_toEndOf="@id/v_bottom_bg"
        app:layout_constraintTop_toTopOf="@id/v_bottom_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>