<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_grey">

    <RelativeLayout
        android:id="@+id/my_page_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/my_detail_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_my_detail"
            android:elevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="35dp">

                <View
                    android:id="@+id/my_profile_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/baseline_account" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/my_profile_img">

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/register_name"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/my_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/my_name"
                        android:text="PlanA@163.com"
                        android:textColor="#aaaaaa" />

                    <android.widget.Button
                        android:id="@+id/btn_logout"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/my_email"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_grey_button_select"
                        android:text="@string/log_out"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

            <!--            <View-->
            <!--                android:id="@+id/my_setting"-->
            <!--                android:layout_width="32dp"-->
            <!--                android:layout_height="32dp"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_marginTop="30dp"-->
            <!--                android:layout_marginEnd="30dp"-->
            <!--                android:background="@drawable/icon_setting" />-->

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_detail_rl"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_dialog_radius_white"
            >


            <RelativeLayout
                android:id="@+id/rl_personal_Info_modify"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_rl_view_select">

                <androidx.emoji2.widget.EmojiButton
                    android:id="@+id/emoji_person"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:text="@string/emoji_person"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/emoji_person"
                    android:text="@string/personal_information_modify"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:alpha="0.5"
                    android:background="@drawable/icon_next" />

            </RelativeLayout>

            <View
                android:id="@+id/v_line_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rl_personal_Info_modify"
                android:layout_marginHorizontal="15dp"
                android:alpha="0.5"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/rl_notify_modify"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/v_line_3"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_rl_view_select">

                <androidx.emoji2.widget.EmojiButton
                    android:id="@+id/emoji_notify"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:text="@string/emoji_notification"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/emoji_notify"
                    android:text="@string/notification_modify"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:alpha="0.5"
                    android:background="@drawable/icon_next" />

            </RelativeLayout>

            <View
                android:id="@+id/v_line_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rl_notify_modify"
                android:layout_marginHorizontal="15dp"
                android:alpha="0.5"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/rl_upload_to_cloud"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/v_line_4"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_rl_view_select">

                <androidx.emoji2.widget.EmojiButton
                    android:id="@+id/emoji_cloud"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:text="@string/emoji_cloud"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/emoji_cloud"
                    android:text="@string/upload_data_to_cloud"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:alpha="0.5"
                    android:background="@drawable/icon_next" />

            </RelativeLayout>

            <View
                android:id="@+id/v_line_5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rl_upload_to_cloud"
                android:layout_marginHorizontal="15dp"
                android:alpha="0.5"
                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/rl_trash_bin"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/v_line_5"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_rl_view_select">

                <androidx.emoji2.widget.EmojiButton
                    android:id="@+id/emoji_trash_bin"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:text="@string/emoji_trash_bin"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/emoji_trash_bin"
                    android:text="@string/trash_bin"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:alpha="0.5"
                    android:background="@drawable/icon_next" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_about_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_my_setting"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_dialog_radius_white">

            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/bg_rl_view_select">

                <androidx.emoji2.widget.EmojiButton
                    android:id="@+id/emoji_box"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:text="@string/emoji_box"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/emoji_box"
                    android:text="@string/about"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:alpha="0.5"
                    android:background="@drawable/icon_next" />
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>