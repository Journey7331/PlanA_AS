<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_grey">

    <RelativeLayout
        android:id="@+id/rl_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_straight">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <androidx.emoji2.widget.EmojiButton
                android:id="@+id/emoji_paste_pad"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:text="@string/emoji_paste_pad"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_plan_brief_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/emoji_paste_pad"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- todo add achievement -->
            <androidx.emoji2.widget.EmojiButton
                android:id="@+id/bt_my_achievement"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:visibility="invisible"
                android:text="@string/emoji_achievement"
                android:textSize="22sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/rl_menu_bar">


        <RelativeLayout
            android:id="@+id/rl_plan_list_empty_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <View
                android:id="@+id/v_plan_list_empty_status_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:alpha="0.6"
                android:background="@drawable/icon_empty" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_plan_list_empty_status_img"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="还没有添加计划呦"
                android:textColor="@color/google_grey_300"
                android:textSize="20sp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/plans_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            tools:itemCount="4"
            tools:listitem="@layout/item_plan_brief" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_plan_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="7dp"
        android:src="@drawable/icon_fab_add"
        app:fabSize="auto" />

</RelativeLayout>