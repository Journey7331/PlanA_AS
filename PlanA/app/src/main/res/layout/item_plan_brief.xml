<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_plan_brief"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_dialog_radius_grey"
    android:elevation="5dp">

    <TextView
        android:id="@+id/tv_plan_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="计划名称"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_plan_name"
        android:layout_alignStart="@+id/ll_container_1"
        android:layout_alignEnd="@+id/ll_container_1"
        android:layout_marginTop="10dp"
        android:background="@color/bar_grey" />


    <LinearLayout
        android:id="@+id/ll_container_1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/tv_plan_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">


        <ProgressBar
            android:id="@+id/progressbar_plan_brief"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/circular_plan_bg"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_plan_percent" />

        <!--        <devlight.io.library.ArcProgressStackView-->
        <!--            android:layout_width="0dp"-->
        <!--            app:apsv_rounded="true"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_weight="2"/>-->


        <TextView
            android:id="@+id/tv_plan_brief_left_days"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:hint="还剩XX天"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>